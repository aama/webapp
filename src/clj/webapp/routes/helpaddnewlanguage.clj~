(ns webapp.routes.helpaddnewlanguage
 (:refer-clojure :exclude [filter concat group-by max min count])
  (:require [compojure.core :refer :all]
            [webapp.views.layout :as layout]
            [webapp.models.sparql :as sparql]
            [compojure.handler :as handler]
            [compojure.route :as route]
            [clojure.string :refer [capitalize split]]
            [stencil.core :as tmpl]
            [clj-http.client :as http]
            ;;[boutros.matsu.sparql :refer :all]
            ;;[boutros.matsu.core :refer [register-namespaces]]
            [clojure.tools.logging :as log]
            [hiccup.element :refer [link-to]]
            [hiccup.form :refer :all]))

(defn helpaddnewlanguage []
  (layout/common 
   [:div {:class "info-page"}
    [:h3 "Help: Add New Language to Datastore"]
    [:ol
     [:li "Create new directory [LANG] in aama-data/data-new."]
     [:li "Using pdgm-table-templates.docx and data-template.edn from aama-data/data-new, create files [LANG]-pdgm-table.docx and [LANG]-data-template.edn in aama-data/data-new/[LANG]/"]
     [:li "Using Word (or possibly other app with good table-creation routines) fill in table templates in docx file with data."
      [:ul
       [:li "Before each table give pdgm descriptive label [NO NON-ALPHANUMERIC CHARACTERS BESIDE '-' AND '_']. source information, and vector of column property lables"]]]
     [:li "When satisfied with tables, transform each to csv in new file [LANG]-pdgm-csv.docx"]
     [:li "Using Emacs, fill in general lang info and for each paradigm create termcluster with :label, :note,  :common property-value pairs, and :term head column-label vector in [LANG]-data-template.edn."]
     [:li "Copy and paste each csv under its column vector"]
     [:li "When all data has been transfered, to edn file, run the following global replacements (NB: will be much easier if docx file already contains plain ASCII quotation marks instead of MS quotes.)"
      [:ol
       [:li "\",[sp]\"] => \"]"]
       [:li ",[sp]\",[sp] => [sp]\""]
       [:li ",[sp] => [sp]"]
       [:li "[sp]\"[sp]\"[sp] => \"[sp]\""]]]
     [:li "Run edn2ttl.clj on edn file to test for format problems [There will be some!]"]
     [:li "When satisfied, copy edn file to new aama-data/data/[LANG]/[LANG]-pdgms.edn file."]]]))

(defroutes helpaddnewlanguage-routes
  (GET "/helpaddnewlanguage" [] (helpaddnewlanguage)))


